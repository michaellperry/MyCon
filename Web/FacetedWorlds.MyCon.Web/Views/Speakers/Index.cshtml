@model FacetedWorlds.MyCon.Web.ViewModels.SpeakersViewModel

@{
    ViewBag.Title = @Model.Title;
}

<h2>@Model.Title</h2>


@foreach (var speaker in Model.Speakers) {
    <div class="speaker">
        <h3>@Html.ActionLink(speaker.Name, "Details", new { id = speaker.Name })</h3>
        <img src="@speaker.ImageUrl" alt="@speaker.Name" />
        <p>@speaker.Bio</p>
        <div class="clear" />
    </div>
}
