<?xml version="1.0" encoding="utf-8"?>
<Application
    x:Class="FacetedWorlds.MyCon.App"
    xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
    xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone"
    xmlns:p1="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="clr-namespace:FacetedWorlds.MyCon.ViewModels">
    <!--Application Resources-->
    <Application.Resources>
        <Color
            x:Key="OverbookedColor">#FFE21B1B</Color>
        <SolidColorBrush
            x:Key="OverbookedBrush"
            Color="{StaticResource OverbookedColor}" />
        <vm:ViewModelLocator
            x:Key="Locator" />
    </Application.Resources>
    <Application.ApplicationLifetimeObjects>
        <!--Required object that handles lifetime events for the application-->
        <shell:PhoneApplicationService
            Launching="Application_Launching"
            Closing="Application_Closing"
            Activated="Application_Activated"
            Deactivated="Application_Deactivated" />
    </Application.ApplicationLifetimeObjects>
</Application>