<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:FacetedWorlds.MyCon.Controls" x:Class="FacetedWorlds.MyCon.Controls.RatingControl"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="78" d:DesignWidth="400"
    Loaded="UserControl_Loaded">
    
    <Grid x:Name="LayoutRoot" Background="{StaticResource PhoneBackgroundBrush}">
    	<Grid.ColumnDefinitions>
    		<ColumnDefinition Width="78"/>
    		<ColumnDefinition Width="78"/>
    		<ColumnDefinition Width="78"/>
    		<ColumnDefinition Width="78"/>
    		<ColumnDefinition Width="78"/>
    	</Grid.ColumnDefinitions>
    	<local:RatingItemControl x:Name="Star1" d:LayoutOverrides="Width, Height"/>
    	<local:RatingItemControl x:Name="Star2" d:LayoutOverrides="Width, Height" Grid.Column="1"/>
    	<local:RatingItemControl x:Name="Star3" d:LayoutOverrides="Width, Height" Grid.Column="2"/>
    	<local:RatingItemControl x:Name="Star4" d:LayoutOverrides="Width, Height" Grid.Column="3"/>
    	<local:RatingItemControl x:Name="Star5" d:LayoutOverrides="Width, Height" Grid.Column="4"/>
    </Grid>
</UserControl>
